//constantes


#define PINSENSORTEMP 36
#define MASKSENSORTEMP 1ULL << PINSENSORTEMP
#define CANALSENSORTEMPERATURA 0


#define PWMFREC 4000
#define PWMDUTYRES 10
#define PINACTUADORLED 22
#define MASKACTUADORLED 1ULL<< PINACTUADORLED


static const char* TAG = "MyModule";


//declaración funciones


void tareaSensorTemperatura( void *);
void tareaActuadorLed( void *);


//handles


adc_oneshot_unit_handle_t h_cad1;
TaskHandle_t h_tareaSensorTemperatura;
TaskHandle_t h_tareaActuadorLed;


QueueHandle_t h_colaEntreCadyPWM;
   
void app_main(void)                 //Main principal
{
    //Crear colas
    h_colaEntreCadyPWM = xQueueCreate(1, sizeof (int) );
    //creación tareas
    xTaskCreate( tareaSensorTemperatura, "tareaSensorTemperatura", 2048, NULL, 1, &h_tareaSensorTemperatura);    
    xTaskCreate( tareaActuadorLed, "tareaActuadorLed", 2048, NULL, 1, &h_tareaSensorTemperatura);    


    while(1)
    {
        vTaskDelay(pdMS_TO_TICKS(10000));
        ESP_LOGI(TAG, "SOY EL MAIN");
    }
}


//definición funciones tareas
void tareaSensorTemperatura( void * parametro)       //Main de la tarea Sensor temperatura led
{
    //configurar pin gpio36 como entrada
    gpio_config_t configGpio36 = {
        .intr_type = GPIO_INTR_DISABLE,
        .mode = GPIO_MODE_INPUT,
        .pull_up_en =  GPIO_PULLUP_DISABLE,
        .pull_down_en = GPIO_PULLDOWN_DISABLE,
        .pin_bit_mask = MASKSENSORTEMP
    };


    gpio_config(&configGpio36);


    adc_oneshot_unit_init_cfg_t configCAD1 = {
        .clk_src = ADC_RTC_CLK_SRC_DEFAULT,
        .ulp_mode = ADC_ULP_MODE_DISABLE,
        .unit_id = ADC_UNIT_1
    };
    adc_oneshot_new_unit(&configCAD1, &h_cad1);


    adc_oneshot_chan_cfg_t configCanalCadSensorTemp = {
        .atten = ADC_ATTEN_DB_0,
        .bitwidth = ADC_BITWIDTH_9
    };
    adc_oneshot_config_channel(h_cad1, CANALSENSORTEMPERATURA, &configCanalCadSensorTemp);


    int valorCAD;


    while(1)
    {
        adc_oneshot_read(h_cad1, CANALSENSORTEMPERATURA, &valorCAD);
        xQueueSend (h_colaEntreCadyPWM, &valorCAD, 0);
        ESP_LOGI(TAG, "valor CAD: %d", valorCAD);
        vTaskDelay(pdMS_TO_TICKS(3000));
    }
}




void tareaActuadorLed( void * parametros)    //Main de la tarea actuación led
{




     //configurar pin gpio36 como entrada
    gpio_config_t configGpio22 = {
        .intr_type = GPIO_INTR_DISABLE,
        .mode = GPIO_MODE_OUTPUT,
        .pull_up_en =  GPIO_PULLUP_DISABLE,
        .pull_down_en = GPIO_PULLDOWN_DISABLE,
        .pin_bit_mask = MASKACTUADORLED
    };
    ledc_timer_config_t configPWMLed = {
        .clk_cfg = LEDC_USE_RC_FAST_CLK,
        .speed_mode = LEDC_LOW_SPEED_MODE,
        .freq_hz = PWMFREC,
        .duty_resolution = PWMDUTYRES,
        .timer_num = LEDC_TIMER_0,
    };


    ledc_timer_config(&configPWMLed);






    ledc_channel_config_t configPWMChannelLed = {
        .channel = LEDC_CHANNEL_0,
